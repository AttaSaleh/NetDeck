{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NetDeck",
  "description": "Download hearthstone decklists from popular sites.",
  "version": "2.3",
	"icons": { "16": "key.png",
           "48": "key.png",
          "128": "key.png" },
  "page_action": {
		"default_icon": "key.png",
		"default_title": "Get this Deck"
  },
  "background": {
    "scripts": ["background.js"],
	  "run_at": "document_end",
    "persistent": false
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
  {
	"matches": ["*://*.hearthstonetopdeck.com/deck.php*","*://*.hss.io/decks/*","*://*.hearthhead.com/deck*","*://*.hearthpwn.com/deck*","*://*.gosugamers.net/hearthstone/decks/*-*","*://*.hearthstoneplayers.com/*-*","*://*.hearthstats.net/decks/*","*://*.heartharena.com/arena-run/*","*://*.tempostorm.com/decks/*"],
	"js": ["jq.js","jdeck.js"]
  }
	]
	
}

