{
"update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "net.DEK",
  "description": "Download hearthstone decklists from popular sites automatically.",
  "version": "2.0",
	"icons": { "16": "key.png",
           "48": "key.png",
          "128": "key.png" },
  "page_action": {
		"default_icon": "key.png",
		"default_title": "Download this Deck"
  },
  "background": {
    "scripts": ["background.js"],
        "run_at": "document_end",
    "persistent": false
  },
  "permissions": [
    "activeTab",
	"tabs"
  ],
  "content_scripts": [
  {
	"matches": ["*://*.hearthstonetopdeck.com/deck.php*"],
	"js": ["jq.js","class.js","jdeck.js"]
	},
  {
	"matches": ["*://*.hearthhead.com/deck*"],
	"js": ["jq.js","class.js","jdeck.js"]
  },
  {
	"matches": ["*://*.hearthpwn.com/decks/*-*"],
	"js": ["jq.js","class.js","jdeck.js"]
  },
  {
	"matches": ["*://*.gosugamers.net/hearthstone/decks/*-*"],
	"js": ["jq.js","class.js","jdeck.js"]
  },
  {
	"matches": ["*://*.hearthstoneplayers.com/*-*"],
	"js": ["jq.js","class.js","jdeck.js"]
  },
  {
	"matches": ["*://*.hearthstats.net/decks/*"],
	"js": ["jq.js","class.js","jdeck.js"]
  }
	]
	
}

