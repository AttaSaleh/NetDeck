{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NetDeck",
  "homepage_url": "http://netdeck.n4ru.it",
  "description": "Get hearthstone decklists from popular sites.",
  "version": "2.4.3",
	"icons": { "16": "key.png",
           "48": "key.png",
          "128": "key.png" },
  "page_action": {
		"default_icon": "key.png"
  },
  "background": {
    "scripts": ["background.js"],
	  "run_at": "document_end",
    "persistent": false
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      }
    }
  },
  "web_accessible_resources": [
    "jq.js", 
    "jDeck.js"
  ]
}